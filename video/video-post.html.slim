  .breadcrumb-inner
    ol.breadcrumb-list
      li: a href="/" 首頁
      li: a href="/focus/" 場邊焦點
      li: a href="/focus/focus-post.html" =zh_lorem_sentence

.video
  .container
    .iframe-video
      .iframe-video-inner
        .fixed-container
          #player

  .video-cover style="background-image: url('http://hhhhold.com/1280x720/#{rand(100)}')"
    .video-info
      .video-info-inner
        h1 =zh_lorem_sentence
        .meta-info
          .meta
            .label 日期
            =lorem_date.to_date
          .meta
            .label 作者
            =zh_lorem_name
        .play-button 播放

.container
  .post
    .article
      .meta-info
        .meta
          .label 日期
          =lorem_date.to_date
        .meta
          .label 作者
          =zh_lorem_name
          button.writer-intro-button 簡介
        .writer-intro
          .close ×
          .writer
            .avatar =image_tag("http://lorempixel.com/48/48/people/#{rand(10)}")
          p.intro-content =zh_lorem_paragraphs 2
      h2 影片簡介
      - 5.times do
        p = zh_lorem_paragraphs 3+rand(5)

