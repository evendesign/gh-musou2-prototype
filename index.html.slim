= render "/partials/index/schedule"

.news
  .container
    .focus-collection
      .title
        | 精選場邊焦點
        a.entrance href="/focus/" 回顧歷史
      ul.list-with-image
        - 6.times do
          li: a href="/focus/post.html"
            .list-content = zh_lorem_sentence
            .list-image = image_tag("http://hhhhold.com/80x50/#{rand(100)}")

    .video-collection
      .title
        | 精選沃草影音
        a.entrance href="/video/" 回顧歷史
      ul.list-with-image
        - 6.times do
          li: a href="/video/video-post.html"
            .list-content = zh_lorem_sentence
            .list-image = image_tag("http://hhhhold.com/80x50/#{rand(100)}")

    .legislator-update
      .title
        | 立委線上近況
        a.entrance href="/legislators/" 回顧歷史
      ul.list
        - 6.times do
          li: a href="/legislators/legislator.html"
            .avatar.is-small.has-party
              .party = image_tag("/images/DPP.png")
              = image_tag("http://lorempixel.com/90/90/people/#{rand(10)}")
            .update-content
              .name = zh_lorem_name
              .content = zh_lorem_sentence

.dictionary-tip
  .container
    .dictionary-card
      .title
        | 立院小知識
        a.entrance href="/dictionary/" 更多知識
      .dictionary-card-inner
        .title
          h3 =zh_lorem_words(2+rand(8))
          a.btn-share-module href="/lightbox/share.html"
            .button 分享
        .entry.article =zh_lorem_paragraphs 2
    .a-cao